<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bar_green"
    tools:context=".chinese_geo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bar_green"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:onClick="back"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="OnClick,UsingOnClickInXml" />
            <TextView
                android:id="@+id/chinesetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:text="@string/chinese_geo2"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b1"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="60dp"
                android:layout_toLeftOf="@+id/b2"
                android:background="@drawable/c6d0ba_round"
                android:onClick="b_3_7"
                android:text="中國通史"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="OnClick,UsingOnClickInXml" />
            <Button
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:background="@drawable/a2b38b_green"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:onClick="b_3_8"
                android:id="@+id/b2"
                android:text="中國各朝代歷史"
                tools:ignore="OnClick,UsingOnClickInXml" />
            <Button
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:background="@drawable/c6d0ba_round"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/b2"
                android:onClick="b_3_9"
                android:id="@+id/b3"
                android:text="中國文化史"
                android:layout_marginLeft="60dp"
                tools:ignore="OnClick,UsingOnClickInXml" />
            <Button
                android:layout_alignLeft="@+id/b1"
                android:layout_alignRight="@+id/b1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:background="@drawable/a2b38b_green"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:layout_below="@+id/b1"
                android:onClick="b_3_10"
                android:id="@+id/b4"
                android:text="中國史料"

                tools:ignore="OnClick,UsingOnClickInXml" />
            <Button
                android:layout_alignLeft="@+id/b2"
                android:layout_alignRight="@+id/b2"
                android:layout_below="@+id/b2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:background="@drawable/c6d0ba_round"
                android:layout_width="190dp"
                android:layout_height="80dp"

                android:layout_toRightOf="@+id/b4"
                android:onClick="b_3_11"
                android:id="@+id/b5"
                android:text="中國地方志"

                tools:ignore="OnClick,UsingOnClickInXml" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>



