<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ADD8E6"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ADD8E6"
        >
        <TextView
                android:id="@+id/username"
                android:textSize="25sp"
                android:text="@string/username"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp">

        </TextView>
        <TextView
            android:background="@drawable/logout"
            android:id="@+id/userinfo"
            android:textSize="15sp"
            android:text="@string/userinfo"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/username"
            >

        </TextView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#DCDCDC"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/roound">

            <ImageView

                android:id="@+id/user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="-70dp"
                android:layout_toLeftOf="@+id/base"
                android:src="@drawable/user">

            </ImageView>

            <TextView
                android:textSize="17sp"
                android:id="@+id/base"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/base">

            </TextView>


            <ImageView
                android:id="@+id/heart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/user"
                android:layout_marginTop="40dp"
                android:layout_marginRight="-70dp"
                android:layout_toLeftOf="@id/fav"
                android:src="@drawable/hear">

            </ImageView>

            <TextView
                android:textSize="17sp"
                android:id="@+id/fav"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/base"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/fav">

            </TextView>

            <ImageView
                android:id="@+id/time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/heart"
                android:layout_marginTop="40dp"
                android:layout_marginRight="-70dp"
                android:layout_toLeftOf="@id/his"
                android:src="@drawable/time">

            </ImageView>

            <TextView
                android:textSize="17sp"
                android:id="@+id/his"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/fav"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/history">

            </TextView>

            <ImageView
                android:id="@+id/book"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/time"
                android:layout_marginTop="40dp"
                android:layout_marginRight="-70dp"
                android:layout_toLeftOf="@id/his"
                android:src="@drawable/book">

            </ImageView>

            <TextView
                android:textSize="17sp"
                android:id="@+id/readmod"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/his"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:text="@string/readmod">

            </TextView>

            <ImageView
                android:id="@+id/globe"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/user"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="-110dp"
                android:layout_toLeftOf="@id/ar"
                android:src="@drawable/globe">

            </ImageView>

            <TextView
                android:textSize="17sp"
                android:id="@+id/ar"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/base"
                android:text="@string/ar">

            </TextView>

            <ImageView
                android:id="@+id/info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/globe"
                android:layout_marginTop="40dp"
                android:layout_marginRight="-110dp"
                android:layout_toLeftOf="@id/help"
                android:src="@drawable/info">

            </ImageView>


            <TextView
                android:textSize="17sp"
                android:id="@+id/help"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@id/ar"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/fav"
                android:text="@string/help">

            </TextView>

            <ImageView
                android:id="@+id/search_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/info"
                android:layout_marginTop="40dp"
                android:layout_marginRight="-110dp"
                android:layout_toLeftOf="@+id/search"
                android:src="@drawable/search">

            </ImageView>

            <TextView
                android:textSize="17sp"
                android:id="@+id/search"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@id/help"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/his"
                android:text="@string/search">

            </TextView>
            <Button
                android:background="@drawable/logout"
                android:textColor="#880000"
                android:text="登出"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_below="@id/search"
                android:layout_toRightOf="@id/readmod"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="0dp">

            </Button>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>