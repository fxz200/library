<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bar_green"
    tools:context=".finish">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bar_green"
            android:orientation="vertical">
            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:text="@string/back"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:onClick="back"
                tools:ignore="OnClick,UsingOnClickInXml"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:text="@string/finish"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/finish_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/finish_title"
                        android:textSize="20sp"
                        android:textColorHint="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"/>
    
                    <TextView
                        android:id="@+id/finish_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/finish_title"
                        android:text="@string/finish_title2"
                        android:textSize="20sp"
                        android:textColorHint="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:layout_width="650dp"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/c6d0ba_round"
                        android:layout_marginTop="75dp">

                        <TextView
                            android:id="@+id/search_qtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/button_green"
                            android:text="@string/search_qtitle"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/search_q1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/search_qtitle"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="50dp"
                            android:text="@string/search_q1"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <RadioGroup
                            android:layout_below="@+id/search_q1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/search_a1_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_a1_1"
                                android:layout_marginLeft="100dp"
                                android:layout_below="@+id/search_q1"
                                android:layout_marginTop="5dp"
                                android:textSize="18sp"/>
                            <RadioButton
                                android:id="@+id/search_a1_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_a1_2"
                                android:layout_toRightOf="@+id/search_a1_1"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                            <RadioButton
                                android:id="@+id/search_a1_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_a1_3"
                                android:layout_toRightOf="@+id/search_a1_2"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                        </RadioGroup>
                        <TextView
                            android:id="@+id/search_q2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/search_q1"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="50dp"
                            android:text="@string/search_q2"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <RadioGroup
                            android:layout_below="@id/search_q2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/search_a2_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_a2_1"
                                android:layout_marginLeft="100dp"
                                android:layout_below="@+id/search_q2"
                                android:layout_marginTop="5dp"
                                android:textSize="18sp"/>
                            <RadioButton
                                android:id="@+id/search_a2_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_a2_2"
                                android:layout_toRightOf="@+id/search_a2_1"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                            <RadioButton
                                android:id="@+id/search_a2_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_a2_3"
                                android:layout_toRightOf="@+id/search_a2_2"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                        </RadioGroup>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>