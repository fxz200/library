<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cam2">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ux_fragment"
        android:name="com.example.myapplication.CleanArFragment"/>

>




    <Button
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:layout_marginLeft="550dp"
        android:layout_marginBottom="160dp"
        android:onClick="finish"
        android:id="@+id/btn_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="抵達樓層"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick,UsingOnClickInXml" />
    <Button
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:layout_marginLeft="550dp"
        android:layout_marginBottom="80dp"
        android:onClick="back"
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="停止導航"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick,UsingOnClickInXml" />
    <Button
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:layout_marginLeft="550dp"
        android:layout_marginBottom="240dp"
        android:onClick="Map"
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="關閉地圖"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick,UsingOnClickInXml" />

    <TextView
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/btn_capture"
        app:layout_constraintEnd_toEndOf="@id/librarymap"
        app:layout_constraintStart_toStartOf="@id/librarymap"
        android:id="@+id/floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/librarymap"
        android:layout_marginTop="0dp"
        tools:ignore="MissingConstraints"
        android:textStyle="bold"
        android:background="@drawable/c6d0ba_round"
        >
    </TextView>

    <ImageView
        android:id="@+id/librarymap"
        android:layout_width="300dp"
        android:layout_height="171dp"
        android:src="@drawable/f4"
        tools:ignore="MissingConstraints"/>







</androidx.constraintlayout.widget.ConstraintLayout>